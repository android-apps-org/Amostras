<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_table_header_image"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginTop="32dp"
            android:background="@color/colorPrimaryLight"
            app:layout_constraintHorizontal_bias="0.33"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_departure_time" />

        <ImageView
            android:id="@+id/iv_table_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/tv_terminal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_table_header_image" />

        <TextView
            android:id="@+id/tv_terminal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terminal_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/iv_table_header_image"
            app:layout_constraintLeft_toLeftOf="@+id/tv_terminal"
            app:layout_constraintRight_toRightOf="@+id/tv_terminal"
            app:layout_constraintTop_toTopOf="@+id/iv_table_header_image" />

        <TextView
            android:id="@+id/tv_gate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gate_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/iv_table_header_image"
            app:layout_constraintLeft_toLeftOf="@+id/tv_gate"
            app:layout_constraintRight_toRightOf="@+id/tv_gate"
            app:layout_constraintTop_toTopOf="@+id/iv_table_header_image" />

        <TextView
            android:id="@+id/tv_seat_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seat_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/iv_table_header_image"
            app:layout_constraintLeft_toLeftOf="@+id/tv_seat"
            app:layout_constraintRight_toRightOf="@+id/tv_seat"
            app:layout_constraintTop_toTopOf="@+id/iv_table_header_image" />

        <TextView
            android:id="@+id/tv_terminal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/iv_table_image"
            app:layout_constraintRight_toRightOf="@+id/iv_table_image"
            app:layout_constraintTop_toTopOf="@+id/iv_table_image"
            tools:text="@string/terminal" />

        <TextView
            android:id="@+id/tv_gate"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/iv_table_image"
            app:layout_constraintLeft_toLeftOf="@+id/iv_table_image"
            app:layout_constraintRight_toRightOf="@+id/iv_table_image"
            app:layout_constraintTop_toBottomOf="@+id/iv_table_header_image"
            tools:text="@string/gate" />

        <TextView
            android:id="@+id/tv_seat"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/white"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/iv_table_image"
            app:layout_constraintRight_toRightOf="@+id/iv_table_image"
            app:layout_constraintTop_toTopOf="@+id/iv_table_image"
            tools:text="@string/seat" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>